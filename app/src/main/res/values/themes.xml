    <style name="custom_text_size" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">
            18dp
        </item>
    </style>

    <style name="custom_tab_layout" parent="TextAppearance.Design.Tab">

        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">cursive</item>
